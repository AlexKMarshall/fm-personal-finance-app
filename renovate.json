{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":pinVersions",
		"customManagers:biomeVersions"
	],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"packageRules": [
		{
			"matchDepTypes": ["devDependencies"],
			"automerge": true
		},
		{
			"matchUpdateTypes": ["patch"],
			"matchCurrentVersion": "!/^0/",
			"automerge": true
		},
		{
			"matchUpdateTypes": ["pin"],
			"automerge": true
		}
	]
}
