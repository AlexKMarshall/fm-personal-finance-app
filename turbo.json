{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build", "db:generate"],
			"outputs": [".build/**"]
		},
		"start": {
			"dependsOn": ["build"],
			"persistent": true,
			"cache": false,
			"env": ["COOKIE_SECRET", "DATABASE_URL"]
		},
		"dev": {
			"dependsOn": ["db:generate"],
			"persistent": true,
			"cache": false,
			"env": ["COOKIE_SECRET", "DATABASE_URL"]
		},
		"typecheck": {
			"dependsOn": ["^check-types", "db:generate"]
		},
		"lint": {},
		"format": {},
		"db:generate": {
			"env": ["DATABASE_URL"],
			"cache": false
		},
		"db:push": {
			"env": ["DATABASE_URL"],
			"cache": false
		},
		"test:e2e": {
			"env": ["CI", "COOKIE_SECRET", "DATABASE_URL"],
			"outputs": ["test-results/**", "playwright-report/**"]
		},
		"test:e2e:dev": {
			"env": ["CI"],
			"persistent": true,
			"cache": false
		}
	}
}
