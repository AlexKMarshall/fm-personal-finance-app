{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".build/**"]
		},
		"start": {
			"dependsOn": ["build"],
			"persistent": true,
			"cache": false
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"typecheck": {
			"dependsOn": ["^check-types"]
		},
		"check": {}
	}
}
